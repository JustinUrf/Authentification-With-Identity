@{
  Layout= "_Layout";
}

@using Bakery.Models

<div class="container">
  <h1>Here's our Treats!</h1>

  @if (Model.Count == 0)
  {
    <h2>You have not added any Treats yet. Click @Html.ActionLink("Here", "Create") to add a Treat</h2>
  }
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>

  @if (Model.Count != 0)
  {
    <p>@Html.ActionLink("Add Another Treat", "Create")</p>
  }

  <p>@Html.ActionLink("Home", "Index", "Home")</p>


</div>