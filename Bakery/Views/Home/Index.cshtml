@{
  Layout = "_Layout";
}

@using Bakery.Models

<div class="container">
  <h1 class="">Welcome to Pierres Bakery!</h1>
  <hr>
  <h2>Browse By Flavor?</h2>
  @if (Model["flavors"].Length == 0)
  {
    <p>No flavors have been added yet!</p>
  }
  <ul>
    @foreach (Flavor thisFlavor in Model["flavors"])
    {
      <li>@Html.ActionLink(@thisFlavor.FlavorName, "Details", "Flavors", new { id = @thisFlavor.FlavorId})</li>
    }
  </ul>
  <hr>
  <h2>Get details on specific Treats?</h2>
  @if (Model["treats"].Length == 0)
  {
    <p>No treats have been added yet!</p>
  }
  <ul>
    @foreach (Treat thisTreat in Model["treats"])
    {
      <li>@Html.ActionLink(@thisTreat.TreatName, "Details", "Treats", new { id = @thisTreat.TreatId})</li>
    }
  </ul>
  <hr>
  <h4>Make sure to sign in to access certain features!</h4>
  <p>@Html.ActionLink("Add new Flavors", "Create", "Flavors")</p>
  <p>@Html.ActionLink("Add new Treats", "Create", "Treats")</p>
  <p>@Html.ActionLink("Create or Manage Accounts", "Index", "Account")</p>

</div>