@{
  Layout= "_Layout";
}

@using Bakery.Models

<div class="container">
  <h1>Here's our flavors!</h1>

  @if (Model.count == 0)
  {
    <h2>You have not added any Flavors yet. Click @Html.ActionLink("Here", "Create") to add a flavor</h2>
  }
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>

  @if (Model.Count != 0)
  {
    <p>@Html.ActionLink("Add Another Flavor", "Create")</p>
  }

  <p>@Html.ActionLink("Home", "Index", "Home")</p>


</div>